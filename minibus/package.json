{
	"name": "minibus",
	"version": "1.0.0",
	"description": "A edge block service to store IPFS data structures",
	"type": "module",
	"main": "./dist/worker.mjs",
	"author": "Vasco Santos <santos.vasco10@gmail.com>",
	"license": "Apache-2.0 OR MIT",
	"scripts": {
		"build": "tsc && node scripts/cli.js build",
		"dev": "miniflare dist/worker.mjs --watch --debug -m",
		"test": "npm run build && npm run test:worker",
		"test:auth": "npm run build && ava --verbose test/auth.spec.js",
		"test:block": "npm run build && ava --verbose test/block.spec.js",
		"test:bucket": "npm run build && ava --verbose test/bucket.spec.js",
		"test:worker": "ava --verbose test/*.spec.js",
		"lint": "standard"
	},
	"dependencies": {
		"ipfs-core-utils": "^0.15.1",
		"itty-router": "^2.6.1",
		"multiformats": "^9.7.0",
		"nanoid": "^3.1.30",
		"node-jose": "^2.2.0",
		"toucan-js": "^2.6.1"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^3.14.1",
		"@sentry/cli": "^1.71.0",
		"@web-std/fetch": "^4.1.0",
		"ava": "^5.2.0",
		"dotenv": "^16.0.0",
		"esbuild": "^0.14.2",
		"git-rev-sync": "^3.0.1",
		"sade": "^1.8.1",
		"standard": "^17.0.0",
		"typescript": "4.7.3",
		"wrangler": "^2.0.19"
	},
	"standard": {
		"ignore": [
			"dist"
		]
	},
	"engines": {
		"node": "16",
		"npm": ">=7.20.0",
		"yarn": "please-use-npm"
	}
}
